<h1 class="text-center">Edit a Resource</h1>

<div class="container">
	<%= form_for @resource do |f|  %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, :class => "form-control", :value => @resource.name, :required => true %>
		</div>
		<div class="form-group">
			<%= f.label :address %>
			<%= f.text_field :address, :class => "form-control", :value => @resource.address, :required => true %>
		</div>
		<div class="form-group">
			<%= f.label :website %>
			<%= f.text_field :website, :class => "form-control", :value => @resource.website %>
		</div>
		<div class="form-group">
			<%= f.label :phone %>
			<%= f.text_field :phone, :class => "form-control", :value => @resource.phone %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, :class => "form-control", :value => @resource.description %>
		</div>
		<div class="form-group">
			<%= f.label :comment %>
			<%= f.text_field :comment, :class => "form-control", :value => @resource.comment %>
		</div>
		<div class="form-group">
			<%= f.label :latitude %>
			<%= f.text_field :latitude, :class => "form-control", :value => @resource.latitude %>
		</div>
		<div class="form-group">
			<%= f.label :longitude %>
			<%= f.text_field :longitude, :class => "form-control", :value => @resource.longitude %>
		</div>
		<div class="form-group">
			<%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
		</div>
		<%= f.submit :class => "btn btn-success" %>
	<% end %>
</div>
